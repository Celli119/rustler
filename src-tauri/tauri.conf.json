{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Rustler",
  "version": "0.1.0",
  "identifier": "com.rustler.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Rustler",
        "width": 900,
        "height": 800,
        "minWidth": 600,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "visible": false,
        "backgroundColor": "#0c0a09"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "licenseFile": "../LICENSE",
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": ["wl-clipboard", "wtype", "xclip", "xdotool"],
        "files": {
          "/usr/share/applications/com.rustler.desktop.desktop": "resources/com.rustler.desktop.desktop",
          "/usr/share/applications/Rustler.desktop": "resources/Rustler-hidden.desktop"
        }
      },
      "rpm": {
        "depends": ["wl-clipboard", "wtype", "xclip", "xdotool"],
        "files": {
          "/usr/share/applications/com.rustler.desktop.desktop": "resources/com.rustler.desktop.desktop",
          "/usr/share/applications/Rustler.desktop": "resources/Rustler-hidden.desktop"
        }
      }
    }
  }
}
